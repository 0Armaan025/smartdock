<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Material.Light">
		<item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="android:colorAccent">#FF0066F4</item>
	</style>
	<style name="AppTheme.Launcher" parent="@android:style/Theme.Material.NoActionBar">
		<item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
	</style>
    <style name="DialogTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog</item>
    </style>
</resources>
