<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="Appearence">
	<ListPreference
		android:entries="@array/themes" 
        android:dialogTitle="Theme" 
        android:entryValues="@array/theme_values" 
        android:key="pref_theme"
		android:title="Dock theme"
		android:defaultValue="pref_theme_dark" />
    
    <EditTextPreference
        android:key="pref_menu_icon_uri"
        android:hint="path"
        android:defaultValue=""
		android:title="Menu icon path"/>
</PreferenceScreen>
