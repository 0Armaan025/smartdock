<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<CheckBoxPreference
		android:key="pref_enable_back"
		android:title="Enable back button"
		android:defaultValue="false" />
	<CheckBoxPreference
		android:key="pref_enable_home"
		android:title="Enable home button"
		android:defaultValue="false" />
	<CheckBoxPreference
		android:key="pref_enable_recents"
		android:title="Enable recents button"
		android:defaultValue="false" />
	<CheckBoxPreference
		android:key="pref_enable_split"
		android:title="Enable split button"
		android:defaultValue="false" />
    <CheckBoxPreference
        android:key="pref_pin_dock"
        android:title="Pin the dock on startup"
        android:summary="Useful when working with other launchers"
        android:defaultValue="false" />
    <EditTextPreference
        android:inputType="number"
        android:key="pref_dock_hide_delay"
        android:hint="500"
        android:defaultValue="500"
		android:title="Dock hide delay in ms"/>
</PreferenceScreen>
