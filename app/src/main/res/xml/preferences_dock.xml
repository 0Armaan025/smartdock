<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Navigation">
        <CheckBoxPreference
            android:key="enable_nav_back"
            android:title="Enable back button"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="enable_nav_home"
            android:title="Enable home button"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="enable_nav_recents"
            android:title="Enable recents button"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="enable_nav_assist"
            android:title="Enable assistant button"
            android:defaultValue="false" />
        <EditTextPreference
            android:key="custom_assist"
            android:summary="Use a custom assistant app, leave blank for default"
            android:title="Custom assistant app"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Quick settings">
        <CheckBoxPreference
            android:key="enable_qs_bluetooth"
            android:title="Enable bluetooth button"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="enable_qs_battery"
            android:title="Enable battery button"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="enable_power_menu"
            android:title="Use built in power menu"
            android:summary="Use a custom power menu instead of the system one"
            android:defaultValue="false" />

    </PreferenceCategory>
    <PreferenceCategory
        android:title="Behaviour">
        <CheckBoxPreference
            android:key="pin_dock"
            android:title="Pin the dock on startup"
            android:summary="Useful when working with other launchers"
            android:defaultValue="false" />
        <EditTextPreference
            android:inputType="number"
            android:key="dock_hide_delay"
            android:hint="500"
            android:defaultValue="500"
            android:title="Dock hide delay in ms"/>
        <CheckBoxPreference
            android:key="center_running_apps"
            android:title="Center running apps"
            android:defaultValue="false" />
        <EditTextPreference
            android:inputType="number"
            android:key="dock_activation_area"
            android:hint="10"
            android:defaultValue="10"
            android:title="Dock activation area"/>
    </PreferenceCategory>
</PreferenceScreen>
