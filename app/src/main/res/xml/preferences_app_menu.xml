<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="App Menu">
	<CheckBoxPreference
		android:key="pref_enable_app_menu"
		android:title="Toggle App Menu with Home button"
		android:summary="When this feature is turned on use Alt+D to go back to the desktop"
		android:defaultValue="true" />
    <EditTextPreference
        android:inputType="number"
        android:key="pref_app_menu_height"
        android:hint="height"
        android:defaultValue="500"
		android:title="App menu height"/>
    <EditTextPreference
        android:inputType="number"
        android:key="pref_app_menu_width"
        android:hint="width"
        android:defaultValue="600"
		android:title="App menu width"/>
    <EditTextPreference
        android:inputType="number"
        android:key="pref_app_menu_x"
        android:hint="x translation"
        android:defaultValue="2"
		android:title="App menu x translation"/>
    <EditTextPreference
        android:inputType="number"
        android:key="pref_app_menu_y"
        android:hint="y translation"
        android:defaultValue="54"
		android:title="App menu y translation"/>
</PreferenceScreen>
