<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Menu">
        <CheckBoxPreference
            android:key="enable_app_menu"
            android:title="Toggle App Menu with modifier key"
            android:defaultValue="true" />
        <ListPreference
            android:entries="@array/shortcut_keys" 
            android:dialogTitle="Menu modifier key" 
            android:title="Menu modifier key" 
            android:entryValues="@array/shortcut_keys_values" 
            android:key="menu_key"
            android:defaultValue="3" />
        <CheckBoxPreference
            android:key="app_menu_fullscreen"
            android:title="Open App Menu in full screen"
            android:defaultValue="false" />
        <EditTextPreference
            android:inputType="number"
            android:key="app_menu_height"
            android:hint="height"
            android:defaultValue="540"
            android:title="App menu height"/>
        <EditTextPreference
            android:inputType="number"
            android:key="app_menu_width"
            android:hint="width"
            android:defaultValue="650"
            android:title="App menu width"/>
        <EditTextPreference
            android:inputType="number"
            android:key="num_columns"
            android:hint="5"
            android:defaultValue="5"
            android:title="Number of columns"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="App launch">
        <ListPreference
            android:entries="@array/launch_modes" 
            android:dialogTitle="Theme" 
            android:entryValues="@array/launch_mode_values" 
            android:key="launch_mode"
            android:title="Default app launch mode"
            android:defaultValue="standard" />
        <CheckBoxPreference
            android:key="remember_launch_mode"
            android:title="Remember launch mode"
            android:summary="Remember last launch mode used for every app"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="launch_games_fullscreen"
            android:title="Launch games in full screen"
            android:summary="Launch apps detected as games in full screen by default"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="lock_landscape"
            android:title="Launch full screen apps in landscpape"
            android:summary="Some full screen apps might try to force screen orientation to portrait. Use this to prevent such behaviour"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Fine tune">
    <EditTextPreference
        android:inputType="number"
        android:key="app_menu_x"
        android:hint="x translation"
        android:defaultValue="2"
        android:title="App menu x translation"/>
    <EditTextPreference
        android:inputType="number"
        android:key="app_menu_y"
        android:hint="y translation"
        android:defaultValue="2"
        android:title="App menu y translation"/>
    </PreferenceCategory>
</PreferenceScreen>
