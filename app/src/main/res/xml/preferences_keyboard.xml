<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:entries="@array/shortcut_keys" 
        android:dialogTitle="Shortcut modifier key" 
        android:title="Shortcut modifier key"
        android:entryValues="@array/shortcut_keys_values" 
        android:key="pref_shortcut_key"
        android:defaultValue="57" />
	<CheckBoxPreference
		android:key="pref_enable_lock_desktop"
		android:title="Enable Modifier+L to lock the desktop(requires Device Admin permission)"
		android:defaultValue="true" />
	<CheckBoxPreference
		android:key="pref_enable_open_settings"
		android:title="Enable Modifier+P to open settings"
		android:defaultValue="true" />
	<CheckBoxPreference
		android:key="pref_enable_open_music"
		android:title="Enable Modifier+M to open you default music app"
		android:defaultValue="true" />
	<CheckBoxPreference
		android:key="pref_enable_open_browser"
		android:title="Enable Modifier+B to open your default browser"
		android:defaultValue="true" />
	<CheckBoxPreference
		android:key="pref_enable_open_terminal"
		android:title="Enable Modifier+T to open terminal"
		android:defaultValue="false" />
	<EditTextPreference
		android:key="pref_terminal_package"
		android:hint="com.termux"
		android:defaultValue="com.termux"
		android:dependency="pref_enable_open_terminal"
		android:title="Terminal app package name"/>
	<CheckBoxPreference
		android:key="pref_enable_expand_notifications"
		android:title="Enable Modifier+A to open notifications"
		android:defaultValue="true" />
	<CheckBoxPreference
		android:key="pref_enable_ctrl_back"
		android:title="Enable right Ctrl to act as back button"
		android:defaultValue="false" />
    <CheckBoxPreference
        android:key="pref_enable_f10"
        android:title="Toggle split screen by pressing F10"
		android:defaultValue="true" />
</PreferenceScreen>
